{% extends "../layouts/default.html.njk" %}

{% from "../_macros.njk" import pageIntro, scholarshipApplyButton %}

{% block content %}
  {% set data = contents.copy.scholarships['introduction.md'] %}

  {{
    pageIntro(
      data.metadata.title,
      data.metadata.introText,
      contents.images.intros[data.metadata.introImage]
    )
  }}

  <div class="l-container">
    <main>
      <div class="c-markdown c-markdown--indented-paragraphs">
        {{ data.html }}
      </div>

      {{ scholarshipApplyButton(scholarshipApplyLink) }}

      <div class="c-markdown c-markdown--indented-paragraphs">
        {{ contents.copy.scholarships['voting.md'].html }}
      </div>

      <div class="c-markdown c-markdown--indented-paragraphs">
        {{ contents.copy.scholarships['faq.md'].html }}
      </div>
    </main>
  </div>
{% endblock %}
